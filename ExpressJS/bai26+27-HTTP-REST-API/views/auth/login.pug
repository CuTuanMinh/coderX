extends ../layouts/master.pug

block content
	h1.ml-5 Login

	if errors
		each error in errors
			.alert.alert-danger= error

	form(action="/auth/login", method="POST")

		.form-group.ml-5
			lable(for="email") Email
			input#email.form-control(type="text", name="email", style="width: 200px", value=value ? value.email : '')
		
		.form-group.ml-5
			lable(for="password") Password
			input#password.form-control(type="text", name="password", style="width: 200px")
		button.ml-5(class="btn btn-primary") Login