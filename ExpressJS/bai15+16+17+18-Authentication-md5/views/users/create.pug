extends ../layouts/master.pug

block content
	h1 Create User

	if errors
		each error in errors
			.alert.alert-danger= error

	form(action="/users/create", method="POST")
		.form-group.ml-5
			lable(for="name") Name
			input#name.form-control(type="text", name="name", style="width: 200px", value=value ? value.name : '')
		
		.form-group.ml-5
			lable(for="phone") Phone
			input#phone.form-control(type="text", name="phone", style="width: 200px", value=value ? value.phone : '')
		button.ml-5(class="btn btn-primary") Create