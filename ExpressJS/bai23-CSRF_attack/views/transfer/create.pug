extends ../layouts/master.pug

block content
	h1 New transfer

	form(method="POST")
		input(type="hidden", name="_csrf", value=csrfToken)

		.form-group.ml-5
			lable(for="account") Account
			input#account.form-control(type="text", name="accountID", style="width: 200px")
		
		.form-group.ml-5
			lable(for="amount") Amount
			input#amount.form-control(type="number", name="amount", style="width: 200px", value=250000)
		button.ml-5(class="btn btn-primary") Transfer